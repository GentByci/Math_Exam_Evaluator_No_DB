<Window x:Class="MathTestSystem.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Test System - Login" 
        Height="700" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid>
        <!-- Header -->
        <Border Background="#007ACC" 
                Height="100" 
                VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="📊 Math Test System" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Select your role to continue" 
                           FontSize="14" 
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="40,120,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Teacher Login Card -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" 
                                      Direction="270" 
                                      ShadowDepth="2" 
                                      BlurRadius="10" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Teacher Icon and Title -->
                    <TextBlock Text="👨‍🏫" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Teacher Portal" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#333333"
                               Margin="0,0,0,20"/>

                    <!-- Description -->
                    <TextBlock Text="Access the teacher dashboard to:" 
                               FontSize="13" 
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="• Load and manage exam data" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="5,0,0,3"/>
                    <TextBlock Text="• View all student results" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="5,0,0,3"/>
                    <TextBlock Text="• Analyze class performance" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="5,0,0,25"/>

                    <!-- Teacher ID Input -->
                    <TextBlock Text="Teacher ID:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="TeacherIdTextBox" 
                             FontSize="14" 
                             Padding="10"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Margin="0,0,0,15"
                             KeyDown="TeacherIdTextBox_KeyDown"/>

                    <!-- Teacher Login Button -->
                    <Button Content="Enter as Teacher" 
                            Click="TeacherLogin_Click"
                            Background="#007ACC"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Padding="0,12"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#005A9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Vertical Divider -->
            <Border Grid.Column="1" 
                    Width="2" 
                    Background="#DDDDDD" 
                    Margin="0,30"/>

            <!-- Student Login Card -->
            <Border Grid.Column="2" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" 
                                      Direction="270" 
                                      ShadowDepth="2" 
                                      BlurRadius="10" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Student Icon and Title -->
                    <TextBlock Text="👨‍🎓" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Student Portal" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#333333"
                               Margin="0,0,0,20"/>

                    <!-- Description -->
                    <TextBlock Text="Access your student account to:" 
                               FontSize="13" 
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="• View your exam results" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="5,0,0,3"/>
                    <TextBlock Text="• Check your scores" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="5,0,0,3"/>
                    <TextBlock Text="• Track your progress" 
                               FontSize="12" 
                               Foreground="#666666"
                               Margin="5,0,0,25"/>

                    <!-- Student ID Input -->
                    <TextBlock Text="Student ID:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="StudentIdTextBox" 
                             FontSize="14" 
                             Padding="10"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Margin="0,0,0,15"
                             KeyDown="StudentIdTextBox_KeyDown"/>

                    <!-- Student Login Button -->
                    <Button Content="Enter as Student" 
                            Click="StudentLogin_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Padding="0,12"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <TextBlock Text="Math Test System v2.0 - Database Edition" 
                   FontSize="11" 
                   Foreground="#999999"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,15"/>
    </Grid>
</Window>
