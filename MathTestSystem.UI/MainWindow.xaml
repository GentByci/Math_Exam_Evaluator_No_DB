<Window x:Class="MathTestSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Test System - Teacher View" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Load Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Load XML (Teacher View)" 
                    Click="LoadXML_Click" 
                    Padding="15,10" 
                    Margin="0,0,10,0"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>

            <Button Content="Open Student View" 
                    Click="OpenStudentView_Click" 
                    Padding="15,10"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- ScrollViewer for Student Results -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StudentResultsPanel">
                <!-- Student results will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Overall Summary -->
        <Border Grid.Row="2" 
                Background="#F0F0F0" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Overall Summary" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="OverallSummaryText" 
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
