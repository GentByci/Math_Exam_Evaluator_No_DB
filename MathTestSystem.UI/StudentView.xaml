<Window x:Class="MathTestSystem.UI.StudentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Results" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title with Logout Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Student Test Results" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <!-- Logout Button (hidden by default, shown when logged in) -->
            <Button x:Name="LogoutButton"
                    Content="🚪 Logout"
                    Click="Logout_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Padding="15,8"
                    Background="#FF9800"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"
                    Visibility="Collapsed"/>
        </Grid>

        <!-- Student ID Input Section (shown when opened from teacher view) -->
        <Border x:Name="InputSection"
                Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="15" 
                Margin="0,0,0,20"
                Background="#F8F8F8"
                Visibility="Visible">
            <StackPanel>
                <TextBlock Text="Enter Your Student ID:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="StudentIdTextBox" 
                             Grid.Column="0"
                             FontSize="14" 
                             Padding="8"
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"
                             KeyDown="StudentIdTextBox_KeyDown"
                             ToolTip="Enter your student ID and press Enter"/>

                    <Button x:Name="LoadResultsButton"
                            Grid.Column="1"
                            Content="View My Results" 
                            Click="LoadResults_Click" 
                            Padding="20,8"
                            FontSize="14"
                            Background="#007ACC"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Student Score Summary -->
        <Border x:Name="ScoreSummaryBorder"
                Grid.Row="2" 
                Background="#E8F5E9" 
                BorderBrush="#4CAF50" 
                BorderThickness="2" 
                Padding="15" 
                Margin="0,0,0,20"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="StudentInfoText" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="ScoreText" 
                           FontSize="16"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="PercentageText" 
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Results DataGrid -->
        <Border Grid.Row="4" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1">
            <DataGrid x:Name="ResultsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      RowHeight="35"
                      AlternatingRowBackground="#F9F9F9"
                      Visibility="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task #" 
                                        Binding="{Binding TaskNumber}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Expression" 
                                        Binding="{Binding Expression}" 
                                        Width="2*"/>
                    <DataGridTextColumn Header="Your Answer" 
                                        Binding="{Binding StudentAnswer}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Correct Answer" 
                                        Binding="{Binding CorrectAnswer}" 
                                        Width="*"/>
                    <DataGridTemplateColumn Header="Result" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ResultText}"
                                           Foreground="{Binding ResultColor}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- No Results Message -->
        <TextBlock x:Name="NoResultsText"
                   Grid.Row="4"
                   Text="Enter your Student ID to view your results."
                   FontSize="16"
                   Foreground="#999"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="40"/>
    </Grid>
</Window>
