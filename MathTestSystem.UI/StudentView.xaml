<Window x:Class="MathTestSystem.UI.StudentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Results" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Student Test Results" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Student ID Input Section -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="15" 
                Margin="0,0,0,20"
                Background="#F8F8F8">
            <StackPanel>
                <TextBlock Text="Enter Your Student ID:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="StudentIdTextBox" 
                             Grid.Column="0"
                             FontSize="14" 
                             Padding="8"
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"
                             KeyDown="StudentIdTextBox_KeyDown"/>

                    <Button x:Name="LoadResultsButton"
                            Grid.Column="1"
                            Content="Load Results" 
                            Click="LoadResults_Click" 
                            Padding="20,8"
                            FontSize="14"
                            Background="#007ACC"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>

                    <Button x:Name="LoadFileButton"
                            Grid.Column="2"
                            Content="Browse XML File..." 
                            Click="LoadFile_Click" 
                            Padding="20,8"
                            FontSize="14"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Grid>

                <TextBlock x:Name="FilePathText"
                           Margin="0,10,0,0"
                           FontSize="12"
                           Foreground="#666"
                           Text="No file loaded"/>
            </StackPanel>
        </Border>

        <!-- Student Score Summary -->
        <Border x:Name="ScoreSummaryBorder"
                Grid.Row="2" 
                Background="#E8F5E9" 
                BorderBrush="#4CAF50" 
                BorderThickness="2" 
                Padding="15" 
                Margin="0,0,0,20"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="StudentInfoText" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="ScoreText" 
                           FontSize="16"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="PercentageText" 
                           FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Results DataGrid -->
        <Border Grid.Row="3" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1">
            <DataGrid x:Name="ResultsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      RowHeight="35"
                      AlternatingRowBackground="#F9F9F9"
                      Visibility="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task #" 
                                        Binding="{Binding TaskNumber}" 
                                        Width="80"/>
                    <DataGridTextColumn Header="Expression" 
                                        Binding="{Binding Expression}" 
                                        Width="2*"/>
                    <DataGridTextColumn Header="Your Answer" 
                                        Binding="{Binding StudentAnswer}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Correct Answer" 
                                        Binding="{Binding CorrectAnswer}" 
                                        Width="*"/>
                    <DataGridTemplateColumn Header="Result" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ResultText}"
                                           Foreground="{Binding ResultColor}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- No Results Message -->
        <TextBlock x:Name="NoResultsText"
                   Grid.Row="3"
                   Text="Enter your Student ID and load an XML file to view your results."
                   FontSize="16"
                   Foreground="#999"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="40"/>
    </Grid>
</Window>
